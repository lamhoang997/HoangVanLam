<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/icon1"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal">

        <EditText
            android:layout_marginLeft="2dp"
            android:hint="nhập tên thành phố"
            android:id="@+id/edtname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />

        <ImageButton
            android:padding="2dp"
            android:background="@null"
            android:src="@drawable/searchb"

            android:id="@+id/btntimkiem"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/txttp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Thành phố"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/txtqg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Quốc gia"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/imgmay"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        app:srcCompat="@drawable/cloudse" />

    <TextView
        android:layout_marginTop="2dp"
        android:layout_gravity="center"
        android:textColor="#f20"
        android:textSize="30dp"
        android:id="@+id/txtnhietdo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhiệt độ" />

    <TextView
        android:layout_gravity="center"
        android:textSize="25dp"
        android:layout_marginTop="2dp"
        android:id="@+id/txttrangthai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trạng thái" />

    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/dropa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="20dp"
                android:text="Độ ẩm"
                android:id="@+id/txtdrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="71dp"
                android:layout_height="64dp"
                android:src="@drawable/may" />
            <TextView
                android:textSize="20dp"
                android:text="Mây"
                android:id="@+id/txtcloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="77dp"
                android:layout_height="62dp"
                android:src="@drawable/sas1" />
            <TextView
                android:textSize="20dp"
                android:text="Gió"
                android:id="@+id/txtwind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:textColor="#0a0a0a"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="Ngày Tháng"
        android:id="@+id/txtday"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:background="#11FFB4"
        android:layout_gravity="center"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="60dp"
        android:id="@+id/btnnext"
        android:textSize="20dp"
        android:text="Xem Thêm"
        android:layout_width="250dp"
        android:layout_height="70dp"
        />
</LinearLayout>